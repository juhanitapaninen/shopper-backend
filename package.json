{
  "name": "shopper-backend",
  "version": "1.0.0",
  "description": "NodeJs backend for shopping list application. Includes Postgre db via docker image.",
  "main": "index.js",
  "dependencies": {
    "body-parser": "^1.18.2",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.7",
    "lusca": "^1.5.2",
    "morgan": "^1.9.0",
    "pg": "^7.4.0",
    "reflect-metadata": "^0.1.10",
    "sanctuary": "^0.14.1",
    "typeorm": "^0.1.7",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/errorhandler": "^0.0.32",
    "@types/es6-promise": "^3.3.0",
    "@types/express-graphql": "^0.0.35",
    "@types/graphql": "^0.11.7",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.0.57",
    "@types/sanctuary": "^0.14.0",
    "@types/winston": "^2.3.7",
    "concurrently": "^3.5.1",
    "nodemon": "^1.12.5",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "test",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juhanitapaninen/shopper-backend.git"
  },
